<Window x:Class="RestaurantManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantManagement"
        mc:Ignorable="d"
        Title="Login" Height="700" Width="450" Background="Aquamarine">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock FontFamily="Georgia" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center">Restaurant Login Page</TextBlock>
        <StackPanel Orientation="Horizontal" Margin="5, 10, 5, 5" HorizontalAlignment="Center">
            <TextBlock FontFamily="Georgia" FontSize="15" FontWeight="Bold">Username:</TextBlock>
            <TextBox x:Name="usernameBox" FontFamily="Georgia" FontSize="15" Width="100" MaxLength="10"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5, 10, 5, 5" HorizontalAlignment="Center">
            <TextBlock FontFamily="Georgia" FontSize="15" FontWeight="Bold">Password:</TextBlock>
            <PasswordBox x:Name="passwordBox" FontFamily="Georgia" FontSize="15" Width="100" MaxLength="10" PasswordChar="*"/>
        </StackPanel>
        <Button Margin="5, 10, 5, 5" FontFamily="Georgia" FontSize="15" FontWeight="Bold" Click="Login_Click" HorizontalAlignment="Center">Login</Button>
        <Button Margin="5, 10, 5, 5" FontFamily="Georgia" FontSize="15" FontWeight="Bold" Click="Switch_SignUp_Click" HorizontalAlignment="Center">Switch to Sign Up</Button>
    </StackPanel>
</Window>
